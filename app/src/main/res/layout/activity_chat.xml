<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
   >




    <TextView
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/josefin_sans"
        android:textSize="20sp"
        android:id="@+id/txt_mensajes"
        android:layout_marginTop="5dp"
        android:gravity="bottom"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="25dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/colorBlanco"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chat con"
            android:textSize="30dp"
            android:id="@+id/txt_titulo_chat_activity"
            android:layout_gravity="center|left"
            android:fontFamily="@font/josefin_sans"
            android:textColor="@color/colorPrimary"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorBlanco"
        android:padding="5dp"
        android:weightSum="10"
        android:layout_alignParentBottom="true">

        <EditText
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="7"
            android:layout_marginRight="10dp"
            android:hint="Escribe tu mensaje aqui..."
            android:paddingLeft="20dp"
            android:background="@drawable/btn_redondeado_rosado"
            android:id="@+id/et_mensaje_chat"
            android:fontFamily="@font/josefin_sans"
            android:textSize="20sp"
            android:singleLine="true"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="Enviar"
            android:layout_weight="3"
            android:textAllCaps="false"
            android:background="@drawable/btn_circular_principal"
            android:textColor="@color/colorBlanco"
            android:fontFamily="@font/josefin_sans"
            android:textSize="20sp"
            android:id="@+id/btn_enviar_chat"/>
    </LinearLayout>

</RelativeLayout>