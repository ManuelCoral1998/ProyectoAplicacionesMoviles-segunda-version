<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imagen_servicio_renglon_informacion_activity"
        android:src="@drawable/ic_new_peluqueria_morado"
        android:layout_marginRight="10dp"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nombre_servicio_renglon_servicio_informacion"
        android:text="Service"
        android:textSize="20sp"
        android:fontFamily="@font/josefin_sans"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="center"
        android:gravity="center_horizontal"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/precio_renglon_servicio_informacion"
        android:fontFamily="@font/josefin_sans"
        android:text="Valor: $"
        android:textSize="15dp"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:layout_marginLeft="5dp"/>

</LinearLayout>