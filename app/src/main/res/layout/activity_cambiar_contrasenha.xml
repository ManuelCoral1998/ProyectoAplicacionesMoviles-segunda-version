<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CambiarContrasenhaActivity"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:id="@+id/btn_registro_salon_volver"
            android:background="@drawable/ic_volver_primary"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/titulo_registro_salon"
            android:text="Cambia tu contrase単a"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/josefin_sans"
            android:textSize="25sp" />
    </LinearLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_contrasehna_128x128"
            android:background="@color/fui_transparent"
            android:elevation="3dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Ingresa tu contrase単a actual*"
            android:id="@+id/et_contrasena_actual_cambiar_activity"
            android:fontFamily="@font/josefin_sans"
            android:background="@drawable/btn_redondeado_rosado"
            android:inputType="textPassword"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:gravity="left|center_vertical"
            android:layout_centerVertical="true"
            android:paddingLeft="60dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_contrasehna_128x128"
            android:background="@color/fui_transparent"
            android:elevation="3dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Ingresa tu nueva contrase単a*"
            android:id="@+id/et_nueva_contrasena_cambiar_activity"
            android:fontFamily="@font/josefin_sans"
            android:background="@drawable/btn_redondeado_rosado"
            android:inputType="textPassword"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:gravity="left|center_vertical"
            android:layout_centerVertical="true"
            android:paddingLeft="60dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_contrasehna_128x128"
            android:background="@color/fui_transparent"
            android:elevation="3dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Confirma tu nueva contrase単a*"
            android:id="@+id/et_confirmar_nueva_cambiar_activity"
            android:fontFamily="@font/josefin_sans"
            android:background="@drawable/btn_redondeado_rosado"
            android:inputType="textPassword"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:gravity="left|center_vertical"
            android:layout_centerVertical="true"
            android:paddingLeft="60dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"/>

    </RelativeLayout>



    <Button
        android:id="@+id/btn_cambiar_contrasena_aceptar"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="20sp"
        android:background="@drawable/btn_circular_principal"
        android:gravity="center"
        android:text="Listo"
        android:textAllCaps="false"
        android:fontFamily="@font/josefin_sans"
        android:textColor="@color/colorBlanco" />

</LinearLayout>