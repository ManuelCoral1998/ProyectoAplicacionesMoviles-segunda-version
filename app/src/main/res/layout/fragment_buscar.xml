<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/et_fragment_buscar_buscar_salon"
        android:hint="@string/buscar_salon_de_belleza_hint"
        android:inputType="text"
        android:padding="11dp"
        android:background="@color/colorPrimaryClaro"

        android:textSize="20sp"
        android:singleLine="true"
        android:maxLength="16"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentEnd="true"
        >

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/btn_cancelar_busqueda"
            android:background="@drawable/ic_eliminar_50x50"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_fragment_buscar_filtros"
            android:background="@color/colorPrimary"
            android:text="Filtros"
            android:textSize="21dp"
            android:textAllCaps="false"
            android:textColor="@color/colorBlanco"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>

</RelativeLayout>