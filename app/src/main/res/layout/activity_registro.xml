<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <Button
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:id="@+id/btn_volver_registro"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_volver_primary" />

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/btn_registro_cliente_estilista"
            android:layout_weight="1"
            android:background="@drawable/imagen_boton_nuevo_cliente"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/btn_registro_salon_belleza"
            android:layout_weight="1"
            android:background="@drawable/imagen_boton_nuevo_salon"
            />
    </LinearLayout>
</RelativeLayout>