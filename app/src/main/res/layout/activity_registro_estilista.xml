<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistroEstilista"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@color/colorBlanco"
    android:padding="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/layout_banner"
                android:gravity="center_vertical">

                <Button
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:id="@+id/btn_registro_estilista_volver"
                    android:background="@drawable/ic_volver_primary" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/titulo_registro_estilista"
                    android:fontFamily="@font/josefin_sans"
                    android:gravity="center_vertical"
                    android:text="Un solo paso más"
                    android:layout_toRightOf="@id/btn_registro_cliente_volver"
                    android:textColor="@color/colorPrimary"
                    android:textSize="35dp"
                    android:layout_marginLeft="20dp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:id="@+id/txt_elige_salon_belleza_correspondiente"
                android:fontFamily="@font/josefin_sans"
                android:text="Elige el Salon de belleza al cual perteneces"
                android:textSize="20dp"
                android:gravity="center"/>

            <Spinner
                android:id="@+id/registro_estilista_spinner_salones_belleza"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"
                android:background="@color/colorPrimarioTransparente"
                android:fontFamily="@font/josefin_sans"
                android:tooltipText="Salones de Belleza"></Spinner>

            <ImageView
                android:id="@+id/registro_estilista_iv_foto"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"
                android:src="@drawable/ic_foto_perfil_defecto_estilista"
                />

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cambiar foto de perfil"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_horizontal"
                android:textSize="20dp"
                />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/borde"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/help"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_centerHorizontal="true"
                    android:text="¿Que servicios ofreces?"
                    android:textSize="20dp"

                    />

                <LinearLayout
                    android:id="@+id/help_layout_linear"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@id/help"
                    android:layout_marginTop="13dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >

                    <CheckBox
                        android:id="@+id/registro_estilista_check_servicio_uñas"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:text="Uñas" />

                    <CheckBox
                        android:id="@+id/registro_estilista_check_servicio_masaje"
                        android:layout_width="93dp"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/help_layout_linear"
                        android:text="Masaje" />

                    <CheckBox
                        android:id="@+id/registro_estilista_check_servicio_maquillaje"
                        android:layout_width="133dp"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/help_layout_linear"
                        android:text="Maquillaje" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/help_layout_linear2"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@id/help_layout_linear"
                    android:layout_marginTop="13dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >

                    <CheckBox
                        android:id="@+id/registro_estilista_check_servicio_depilacion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Depilación" />

                    <CheckBox
                        android:id="@+id/registro_estilista_check_servicio_peluqueria"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/help_layout_linear"
                        android:text="Peluquería" />

                </LinearLayout>

                <TextView
                    android:id="@+id/ajusta_tu_horario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/help_layout_linear2"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="10dp"
                    android:text="Ajusta tu horarios"
                    android:textSize="20dp" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ajusta_tu_horario"
                    android:id="@+id/layout_horario_desde"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    >

                    <TextView
                        android:id="@+id/ajuste_DE"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ajusta_tu_horario"
                        android:layout_marginRight="10dp"
                        android:text="De: "
                        android:textSize="20dp" />

                    <Spinner
                        android:id="@+id/registro_estilista_spinner_fecha_inicio"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ajusta_tu_horario"
                        android:tooltipText="Lunes">

                    </Spinner>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/layout_horario_hasta"
                    android:layout_below="@id/layout_horario_desde"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/ajuste_A"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="A:  "
                        android:textSize="20dp" />

                    <Spinner
                        android:id="@+id/registro_estilista_spinner_fecha_final"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/registro_estilista_spinner_fecha_inicio"
                        android:tooltipText="Lunes"></Spinner>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:id="@+id/textos_mostrar_horarios"
                    android:layout_below="@id/layout_horario_hasta">


                    <EditText
                        android:id="@+id/et_obtener_hora_inicio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ajuste_A"
                        android:layout_alignParentStart="true"
                        android:layout_marginRight="15dp"
                        android:text="hh:mm"
                        android:editable="false"/>

                    <EditText
                        android:id="@+id/et_obtener_hora_final"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ajuste_A"
                        android:layout_alignParentStart="true"
                        android:text="hh:mm"
                        android:editable="false"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:id="@+id/botones_inicio_final"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/textos_mostrar_horarios">


                    <Button
                        android:id="@+id/ib_obtener_hora_inicio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="Inicio"
                        android:layout_marginRight="15dp"
                        android:textColor="@color/colorBlanco"
                        android:background="@drawable/btn_circular_secundario"
                        app:layout_constraintHorizontal_bias="0.504"
                        tools:ignore="ContentDescription" />

                    <Button
                        android:id="@+id/ib_obtener_hora_final"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="Final"
                        android:textColor="@color/colorBlanco"
                        android:background="@drawable/btn_circular_secundario"
                        app:layout_constraintHorizontal_bias="0.504"
                        tools:ignore="ContentDescription" />


                </LinearLayout>

            </RelativeLayout>

            <Button
                android:id="@+id/registro_estilista_btn_listo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorBlanco"
                android:text="Listo"
                android:background="@drawable/btn_circular_principal"
                android:layout_marginBottom="20dp"
                />
        </LinearLayout>

    </ScrollView>
</LinearLayout>