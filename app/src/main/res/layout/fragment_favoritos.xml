<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FavoritosFragment"
    android:padding="20dp"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tus salones favoritos"
        android:fontFamily="@font/josefin_sans"
        android:textSize="30sp"
        android:textColor="@color/colorPrimaryMuyDark"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/josefin_sans"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:text="Aún no has añadido salones a esta lista."
        android:id="@+id/txt_no_hay_salones_favoritos"
        android:layout_gravity="center"/>

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listado_salones_favoritos"
        android:layout_below="@id/layout_filtros">
    </android.support.v7.widget.RecyclerView>

</LinearLayout>