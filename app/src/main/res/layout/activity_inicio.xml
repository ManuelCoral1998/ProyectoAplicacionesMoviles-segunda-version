<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorPrimaryClaro"
    android:padding="20dp">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_salir_inicio_activity"
        android:src="@drawable/ic_salir_16x16"
        android:background="@color/fui_transparent" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/image_logo_inicio_activity"
        android:src="@drawable/ic_glam_150x150_borde"
        android:layout_below="@id/btn_salir_inicio_activity"
        android:layout_marginTop="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_lema_inicio_activity"
        android:text="Descubre los mejores salones de belleza."
        android:textSize="35dp"
        android:textColor="#000"
        android:layout_below="@id/image_logo_inicio_activity"
        android:layout_marginTop="20dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:padding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/facebook_logo"
                android:elevation="3dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_facebook_inicio_activity"
                android:background="@drawable/btn_redondeado_facebook"
                android:text="Ingresa con Facebook"
                android:textColor="@color/colorBlanco"
                android:textSize="20dp"
                android:layout_centerVertical="true"
                android:textAllCaps="false"
                android:gravity="left|center_vertical"
                android:paddingLeft="60dp"
                android:layout_marginBottom="10dp"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/google_logo"
                android:elevation="3dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_google_inicio_activity"
                android:background="@drawable/btn_redondeado_normal"
                android:text="Ingresa con Google"
                android:textSize="20dp"
                android:layout_centerVertical="true"
                android:textAllCaps="false"
                android:gravity="left|center_vertical"
                android:paddingLeft="60dp"
                android:layout_marginBottom="10dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_mail_256x256"
                android:elevation="3dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_correo_inicio_activity"
                android:background="@drawable/btn_redondeado_normal"
                android:text="Ingresa con tu email"
                android:textSize="20dp"
                android:textAllCaps="false"
                android:gravity="left|center_vertical"
                android:paddingLeft="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_crear_cuenta_inicio_activity"
            android:text="Crea una cuenta"
            android:textSize="20dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="30dp"/>
    </LinearLayout>

</RelativeLayout>